# Environment
NODE_ENV=development

# Server Configuration
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/markethub
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/markethub

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production
JWT_REFRESH_EXPIRE=30d

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@markethub.com

# WhatsApp Configuration
WHATSAPP_API_URL=https://api.whatsapp.com/send
# Optional: If using WhatsApp Business API
# WHATSAPP_BUSINESS_API_URL=https://graph.instagram.com/v18.0/...
# WHATSAPP_BUSINESS_PHONE_ID=your_phone_id
# WHATSAPP_BUSINESS_ACCESS_TOKEN=your_access_token

# Frontend URL
FRONTEND_URL=http://localhost:3000

# API URL
API_URL=http://localhost:5000

# Redis Configuration (optional for caching)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# Payment Gateway Configuration (optional)
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_key

# Email Service (optional - Sendgrid, Mailgun, etc)
SENDGRID_API_KEY=your_sendgrid_api_key

# AWS Configuration (optional - for S3 file storage)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_bucket_name

# Admin Configuration
ADMIN_EMAIL=admin@markethub.com
ADMIN_PASSWORD=your_secure_admin_password

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Feature Flags
ENABLE_PAYMENTS=false
ENABLE_EMAIL_VERIFICATION=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Database Connection Options
MONGODB_POOL_SIZE=10
MONGODB_TIMEOUT=5000
