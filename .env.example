# ============================================
# MarketHub - Environment Variables Example
# ============================================
# Copy this file to .env.local and fill in your values

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=5000

# ============================================
# DATABASE CONFIGURATION
# ============================================
# For local MongoDB:
MONGODB_URI=mongodb://localhost:27017/markethub

# For MongoDB Atlas (Cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/markethub?retryWrites=true&w=majority

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_jwt_refresh_secret_change_this
JWT_REFRESH_EXPIRE=30d

# ============================================
# FRONTEND CONFIGURATION
# ============================================
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_APP_NAME=MarketHub

# ============================================
# API CONFIGURATION
# ============================================
API_URL=http://localhost:5000

# ============================================
# EMAIL CONFIGURATION (Optional - for email notifications)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@markethub.com

# ============================================
# WHATSAPP CONFIGURATION (Optional)
# ============================================
WHATSAPP_API_URL=https://api.whatsapp.com/send

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# ============================================
# REDIS CONFIGURATION (Optional - for caching)
# ============================================
# REDIS_URL=redis://localhost:6379
